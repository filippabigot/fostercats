<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FosterCats</title>
    <link rel="stylesheet" href="/layout.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    {{!----- navigation bar --------------------------------------------}}
    <header>
      <nav class="navbar has-shadow is-white">
        <div class="navbar-brand">
          <a class="navbar-item">
            <img
              src="/images/portait.png"
              alt="site logo"
              style="max-height: 70px"
            />
          </a>
          <a class="navbar-burger is-mobile" id="burger">
            <span></span>
            <span></span>
            <span></span>
          </a>
        </div>
        <div class="navbar-menu" id="nav-links">
          <div class="navbar-start">
            <a href="/" class="navbar-item">Start</a>
            <a href="/add-cat" class="navbar-item">Add Cat</a>
            <a href="/previous-cats" class="navbar-item">Previous Cats</a>
            <a href="/available-cats" class="navbar-item"> Available Cats</a>
            <a href="/arriving-cats" class="navbar-item"> Arriving Cats</a>
            <a href="/foster-care" class="navbar-item">Foster Care</a>
            <a href="/sponsors" class="navbar-item">Sponsors</a>
            <a href="/about" class="navbar-item">About</a>
            <a href="/contact" class="navbar-item"> Contact</a>
          </div>
          <div class="navbar-end" style="padding-right: 70px;">
            {{#unless isLoggedIn}}
              <a href="/login" class="navbar-item">Login</a>
            {{/unless}}
            {{#if isLoggedIn}}{{/if}}
          </div>
        </div>
        <script>
          const burgerIcon = document.querySelector('#burger'); const navbarMenu
          = document.querySelector('#nav-links');
          burgerIcon.addEventListener('click', () => {
          navbarMenu.classList.toggle('is-active'); });
        </script>
      </nav>
    </header>

    {{{body}}}

  </body>

  <footer>
    <div class="columns mb-3 mt-3 is-centered">
      <div class="column content has-text-centered">
        <div>
          Copyright Â© 2023 FosterCats
        </div>
      </div>
    </div>
  </footer>

</html>